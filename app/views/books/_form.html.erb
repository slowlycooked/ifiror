<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> 保存出错了:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label '账本名称' %><br>
    <%= f.text_field :book_name %>
  </div>
  <div class="actions">
    <%= f.submit '保存', class:'btn btn-primary' %>
    <%= link_to '返回', books_path(@book),  class: 'btn btn-primary'  %>
  </div>
<% end %>
