<%= form_for(@customer, html: {class: 'form-horizontal'}) do |f| %>

    <% if @customer != nil and @customer.errors.any? %>
        <div id="error_explanation" >
          <h3>有错误导致不能保存数据：</h3>
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field form-group">
      <%= f.label '客户名称', class: 'col-xs-1 control-label' %>
      <div class="col-xs-4">
        <%= f.text_field :cname, class: 'form-control' %>
      </div>
    </div>
    <div class="field form-group">
      <%= f.label '电话号码', class: 'col-xs-1 control-label' %>
      <div class="col-xs-4">
        <%= f.text_field :phone_no, class: 'form-control' %>
      </div>
    </div>
    <div class="actions form-group">
      <div class="col-xs-offset-1 col-xs-10">
        <%= f.submit '保存', class:'btn btn-primary btn-lg' %>
      </div>
    </div>
<% end %>



