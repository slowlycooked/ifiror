<h2>注册</h2>

<div class="row">
  <div class="col-xs-12 col-lg-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label "客户名称" %><br/>
          <%= f.text_field :name, class: "form-control", autofocus: true %>
        </div>

        <div class="field">
          <%= f.label "手机号" %><br/>
          <%= f.text_field :mobile, class: "form-control", autofocus: true %>
        </div>


        <div class="field">
          <%= f.label "密码" %>
          <% if @minimum_password_length %>
              <em>(最少 <%= @minimum_password_length %> 字符)</em>
          <% end %><br/>
          <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label "确认密码" %><br/>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
        </div>


        <div class="field">
          <%= f.label "邀请码" %><br/>
          <%= f.text_field :invitation, class: "form-control", autofocus: true %>
        </div>

        <div class="actions">
          <%= f.submit "创建用户", class: "btn btn-lg btn-primary btn-block" %>

        </div>
        <%= link_to "登陆", new_tenant_session_path, class: "btn btn-lg btn-primary btn-block" %>
    <% end %>
  </div>
</div>

