<% content_for :title, @fee.fee_name+'日趋势' %>

<div class="fixed-box">
  <ol class="breadcrumb">
    <li><%= link_to '主页', root_path %></li>
    <li><%= link_to @fee.fee_name, book_fee_path(@book, @fee) %></li>
    <li class="active"> <%= @fee.fee_name+'月报' %></li>
  </ol>
</div>

<br>
<br>


<script type="text/javascript" charset="utf-8">
    var processed_json = new Array();
    $(function () {

        var dd = <%= @groupby_date.to_json.html_safe %>;

        for (i = 0; i < dd.length; i++){
            processed_json.push([dd[i].date, dd[i].income]);
        }


        new Highcharts.Chart({
            chart: {
                type: 'line',
                renderTo: "orders_chart"
            },
            plotOptions: {
                bar: {
                    dataLabels: {
                        enabled: true
                    }
                }
            },
            title: {
                text: "月收支对比报表"
            },
            xAxis: {
                type: 'datetime',
                dateTimeLabelFormats: { // don't display the dummy year
                    month: '%e. %b',
                    year: '%b'
                },

                title: {text: "日"}
            },
            yAxis: {
                title: {
                    text: "元"
                },
                labels: {
                    overflow: 'justify'
                }

            },
            tooltip: {
                valueSuffix: ' 元'
            },


            series: [
                {
                    name: '支出',
                    data: <%= groupby_date = @groupby_date.reject { |o| o.income.nil? }
                 raw groupby_date.map { |o| [o.date.strftime('%s'), o.income ] }.compact.to_s %>,

                    color: '#FF3333'
                }
            ]
        });
    });



</script>

<div id="orders_chart"></div>


<div id="no-more-tables">
  <table class="table table-responsive table-striped table-hover table-condensed table-bordered " style="border: 2px solid orange">
    <thead>
    <tr>
      <th>费项</th>
      <th>余额</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td class="head_sum" data-title="费项"><%= @fee.fee_name %></td>

      <td class="head_sum" data-title="余额"><%= (@credit_sum-@debit_sum).round(2) %></td>
    </tr>

    </tbody>
  </table>

  <table class="table table-responsive table-striped table-hover table-condensed table-bordered ">
    <thead>
    <tr>
      <th>月份</th>
      <th>余额</th>
    </tr>
    </thead>

    <tbody>
    <% @groupby_date.each do |record| %>

    <tr>
          <td class="numeric" data-title="月份">
            <%= record.date.to_s %>
          </td>
          <td class="numeric" data-title="收入"><%= record.income.to_f.round(2) %></td>

        </tr>
    <% end %>

    </tbody>
  </table>

</div>



